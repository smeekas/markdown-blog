  <body>
    <div class="container">
      <%console.log("admin index.ejs ",isAuthenticated)%> <%-
      include('../includes/nav.ejs')%>
      <%if(articles.length>0){%>
      <h1 class="mb-4" style="text-align: center;">My articles</h1>

      <% articles.forEach(art=>{ %>
      <div class="card mt-4">
        <div class="card-body">
          <div class="d-flex justify-content-center">


            <div class="flex-column">
            <div class="d-flex justify-content-between">
                        <div class="p-2">
                            <h4 class="card-title"><%=art.title %></h4>
                            <div class="card-subtitle text-muted mb-2">
                            <%=art.createdAt.toLocaleString() %>
                            </div>
                            <div class="card-text mb-2"><p><%=art.description %></p></div>
                        </div>
              <div class="p-2">
                <h3>views:<%=art.impression%></h3>
              </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="/articles/<%=art._id%>" class="btn btn-primary"
                    >Read More</a
                  >
                  <a href="/admin/edit/<%=art._id%>" class="btn btn-success">
                    Edit
                  </a>
                  <!-- <button type="submit" class="btn btn-danger">Delete</button> -->
                  <form
                    action="/admin/delete/<%=art._id%>"
                    class="d-inline"
                    method="POST"
                  >
                  
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>
            </div>
        </div>








